<Window x:Class="MediaPlayer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <TabControl>
            <TabItem Header="Media Genres">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Name="genreTextBox" Text="Enter new genre..." Grid.Row="0" Margin="12,5,12,5"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Add Genre" Click="AddGenre_Click" Margin="12,5,12,5" Grid.Column="0" />
                        <Button Content="Edit Genre" Click="EditGenre_Click" Margin="12,5,12,5" Width="100" IsEnabled="False" Name="editGenreButton" Grid.Column="1"/>
                        <Button Content="Delete Genre" Click="DeleteGenre_Click" Margin="13,5,12,5" Width="100" IsEnabled="False" Name="deleteGenreButton" Grid.Column="2"/>
                    </Grid>
                    <ListBox Name="genreListBox" Margin="10" SelectionChanged="GenreListBox_SelectionChanged" Grid.Row="3" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>